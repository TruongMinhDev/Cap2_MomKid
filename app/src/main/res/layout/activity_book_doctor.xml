<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.book_doctor.BookDoctorActivity"
    android:background="@drawable/backgrondchung">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_margin="25dp"
        >

        <TextView
            android:id="@+id/txt_title"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt lịch hẹn"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/image_calender"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/lich" />



        <RelativeLayout
            android:id="@+id/layout_symptom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image_calender"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_title_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Triệu chứng"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edt_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder2"
                android:layout_below="@+id/txt_title_title"
                android:hint="Nhập triệu chứng"
                android:layout_marginTop="5dp"
                android:height="60dp"
                android:textSize="17dp"
                android:padding="10dp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_symptom"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_title_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chọn ngày"
                android:layout_marginTop="5dp"
                android:height="60dp"
                android:background="@drawable/boder2"
                android:layout_below="@id/txt_title_date"
                android:focusable="false"
                android:onClick="selectDate"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_date"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_title_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chọn giờ"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TableLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/txt_title_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TableRow
                    android:id="@+id/row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="8:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked" />

                    <Button
                        android:text="9:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked" />

                    <Button
                        android:text="10:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked"
                         />
                    <Button
                        android:text="11:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked"
                        />

                </TableRow>

                <TableRow
                    android:id="@+id/row_2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="13:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked" />

                    <Button
                        android:text="14:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked" />

                    <Button
                        android:text="15:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked"
                        />
                    <Button
                        android:text="16:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked"
                        />

                </TableRow>

                <TableRow
                    android:id="@+id/row_3"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="18:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked" />

                    <Button
                        android:text="19:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked" />

                    <Button
                        android:text="20:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked"
                        />
                    <Button
                        android:text="21:00"
                        android:background="@drawable/boder1"
                        android:layout_weight="1"
                        android:onClick="onSeatClicked"
                        />

                </TableRow>


                <!-- Các hàng khác tương tự -->

            </TableLayout>



        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_time"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/pink"
                    android:onClick="showAlertEdit"
                    android:text="Đặt lịch"/>

            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>

</ScrollView>