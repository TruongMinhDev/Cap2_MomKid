<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_authentication"
    tools:context=".ui.profile.ProflieKidActivity">

    <TextView
        android:id="@+id/txt_thongtinbe"
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:layout_marginTop="80dp"
        android:text="THÔNG TIN BÉ"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edt_namekid"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:hint="Nhập Họ và Tên Bé"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:background="@drawable/customer_edittext"/>

    <EditText
        android:id="@+id/edt_birthdate"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="date"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập ngày sinh"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:background="@drawable/customer_edittext"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp">

        <TextView
            android:id="@+id/txt_gioitinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới Tính"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/btn_sex_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nữ"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <RadioButton
                android:id="@+id/btn_sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:text="Nam"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

        </RadioGroup>


    </LinearLayout>

    <EditText
        android:id="@+id/edt_height"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:hint="Nhập chiều cao"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:background="@drawable/customer_edittext"/>

    <EditText
        android:id="@+id/edt_weight"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:hint="Nhập cân nặng"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:background="@drawable/customer_edittext"/>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="189dp"
        android:layout_height="53dp"
        android:backgroundTint="#E91E63"
        android:text="LƯU"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
</LinearLayout>