<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud_authentication"
    tools:context=".ui.profile.ProflieKidActivity">

    <TextView
        android:id="@+id/txt_thongtinbe"
        android:layout_width="216dp"
        android:layout_height="39dp"
        android:layout_marginTop="50dp"
        android:text="THÔNG TIN BÉ"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Họ và tên" />

        <EditText
            android:id="@+id/edt_namekid"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/customer_edittext"
            android:ems="10"
            android:hint="Nhập Họ và Tên Bé"
            android:inputType="textPersonName"
            android:padding="10dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Ngày Sinh"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edt_birthdate"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="date"
            android:padding="10dp"
            android:hint="Nhập ngày sinh"
            tools:ignore="MissingConstraints"
            android:background="@drawable/customer_edittext"/>
    </LinearLayout>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/txt_gioitinh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Giới Tính"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            tools:ignore="MissingConstraints" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbt_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Nữ"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <RadioButton
                android:id="@+id/rbt_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:text="Nam"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

        </RadioGroup>


    </LinearLayout>



    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/pink"
        android:text="Thêm Bé"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>